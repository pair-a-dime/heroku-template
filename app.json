{
  "name": "Directus",
  "website": "https://directus.io/",
  "description": "An Instant App & API for your SQL Database.",
  "repository": "https://github.com/directus/heroku",
  "logo": "https://raw.githubusercontent.com/directus-community/heroku-template/master/.github/logo.png",
  "keywords": [
    "directus",
    "productivity",
    "dashboard",
    "admin",
    "postgres",
    "mysql",
    "cms",
    "headless-cms",
    "data-platform"
  ],
  "success_url": "/admin",
  "env": {
    "ADMIN_EMAIL": {
      "description": "The initial admin email.",
      "value": ""
    },
    "ADMIN_PASSWORD": {
      "description": "The initial admin password.",
      "value": ""
    },
    "CONFIG_PATH": {
      "description": "Application config loader path.",
      "value": "/app/directus.config.js"
    },
    "PUBLIC_URL": {
      "description": "Application public URL.",
      "value": "/"
    },
    "DB_CLIENT": {
      "description": "Database server type.",
      "value": "pg"
    },
    "KEY": {
      "description": "The application key.",
      "generator": "secret"
    },
    "SECRET": {
      "description": "The application secret key.",
      "generator": "secret"
    },
    "CORS_ENABLED": {
      "description": "Enable CORS",
      "value": "true"
    },
    "CORS_ORIGIN": {
      "description": "Allowed origin for CORS requests (true for any origin, false for none)",
      "value": "true"
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "free"
    }
  },
  "image": "heroku/nodejs",
  "addons": [
    {
      "as": "MAILGUN",
      "plan": "mailgun:starter"
    },
    {
      "as": "DATABASE",
      "plan": "heroku-postgresql:mini",
      "options": {
        "version": "12"
      }
    },
    {
      "as": "REDIS",
      "plan": "heroku-redis:mini",
      "options": {
        "version": "6"
      }
    }
  ],
  "buildpacks": [
    {
      "url": "https://github.com/heroku/heroku-buildpack-nodejs"
    }
  ],
  "environments": {
    "test": {
      "scripts": {
        "test": "bundle exec rake test"
      }
    }
  }
}
